<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_borde">

        <TextView
            android:id="@+id/eqMagnitudeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="1.90"
            android:background="@drawable/shape_fondo_mag"/>

        <TextView
            android:id="@+id/eqPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_toStartOf="@id/eqArrowImage"
            android:layout_toEndOf="@id/eqMagnitudeText"
            android:gravity="center"
            android:padding="4dp"
            tools:text="80 km E NY" />

        <ImageView

            android:id="@+id/eqArrowImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>